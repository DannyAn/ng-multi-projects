{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@hero/*": [
        "projects/hero-app/src/app/*"
      ],
      "@common-lib": [
        "projects/common-lib/src/public_api.ts"
      ],
      "@common-lib/*": [
        "projects/common-lib/src/*"
      ],
      "@joke/*": [
        "projects/joke-app/arc/app/*"
      ],
      "@joke-lib": [
        "projects/joke-lib/src/public_api.ts"
      ],
      "@joke-lib/*": [
        "projects/joke-lib/src/app/*"
      ],
      "lib1": [
        "dist/lib1"
      ],
      "joke-lib": [
        "dist/joke-lib"
      ],
      "common-lib": [
        "dist/common-lib"
      ]
    }
  }
}